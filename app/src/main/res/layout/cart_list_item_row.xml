<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:weightSum="4">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:weightSum="6"
           android:padding="5dp"
           android:layout_weight="2">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="10dp"
               android:padding="5dp"
               android:gravity="center"
               android:layout_weight="2">
               <ImageView
                   android:id="@+id/iv_product"
                   android:layout_width="wrap_content"
                   android:layout_height="120dp"
                   android:layout_gravity="bottom"
                   android:src="@drawable/orange_bottle" />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:paddingLeft="10dp"
               android:layout_weight="1.3">

               <TextView
                   android:id="@+id/tv_productname"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:layout_marginTop="10dp"
                   android:textSize="18dp"
                   android:textStyle="bold"
                   android:textColor="@color/black"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="SKU:"
                       android:textStyle="bold"
                       android:textSize="15dp"
                       android:textColor="@color/black"/>

                   <TextView
                       android:id="@+id/tv_product_desc"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:textSize="16dp"
                       android:textColor="@color/black"/>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:gravity="center|start"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:padding="5dp"
                       android:orientation="horizontal">
                       <ImageView
                           android:id="@+id/iv_cart_quantity_increase"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="10dp"
                           android:src="@drawable/ic_add_circle_black_24dp"/>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:padding="5dp"
                           android:orientation="vertical">
                           <RelativeLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:gravity="center">
                               <TextView
                                   android:id="@+id/tv_cart_quantity_total"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="1"
                                   android:textColor="@color/black"
                                   android:textSize="16dp"
                                   android:textStyle="bold" />

                           </RelativeLayout>
                           <ProgressBar
                               android:id="@+id/cart_count_pb"
                               android:layout_width="34dp"
                               android:layout_height="34dp"
                               android:layout_marginTop="-25dp"
                               android:indeterminateDrawable="@drawable/progressbar_ui"
                               android:visibility="gone" />
                       </LinearLayout>

                       <ImageView
                           android:id="@+id/iv_cart_quantity_decrease"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="10dp"
                           android:src="@drawable/ic_remove_circle_black_24dp"/>

                   </LinearLayout>

               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center|top"
               android:layout_weight="2.7">
               <ImageView
                   android:id="@+id/cart_close"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/cart_close" />
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:weightSum="2"
           android:padding="10dp"
           android:gravity="center"
           android:layout_weight="2">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1">

               <ImageView
                   android:id="@+id/iv_add_wish"
                   android:layout_width="25sp"
                   android:layout_height="25sp"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/add_wishlist" />
               <ImageView
                   android:id="@+id/iv_add_wish1"
                   android:layout_width="25sp"
                   android:layout_height="25sp"
                   android:visibility="gone"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/hart_black" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="WISHLIST"
                   android:textSize="15dp"
                   android:layout_marginLeft="10dp"
                   android:textStyle="bold"
                   android:textColor="@color/ed_text_signin"
                   android:gravity="center" />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center|right"
               android:layout_weight="1">

               <TextView
                   android:id="@+id/tv_productprice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0.00"
                   android:textSize="16dp"
                   android:layout_marginRight="10dp"
                   android:textStyle="bold"
                   android:textColor="@color/red"
                   android:gravity="center" />
           </LinearLayout>

       </LinearLayout>
       <View
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:background="#e1e1e1" />

   </LinearLayout>




</LinearLayout>