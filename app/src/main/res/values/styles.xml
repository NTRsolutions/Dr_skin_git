<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:listDivider">@color/ed_text_signin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/ed_text_signin</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/round_corner_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">14sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">45dp</item><!-- menu item height-->
        <item name="listPreferredItemPaddingLeft">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:listPreferredItemPaddingRight">50dp</item>
    </style>


    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>
